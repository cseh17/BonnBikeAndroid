<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bonnBikeColor</item>
        <item name="colorPrimaryDark">@color/bonnBikeColor</item>
        <item name="colorAccent">@color/bonnBikeColor</item>
        <item name="android:navigationBarColor">@color/bonnBikeColor</item>
    </style>

    <!-- Splash Screen. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
